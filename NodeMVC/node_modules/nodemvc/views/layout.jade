doctype html
html(class="#{currentRouteName()}")
	//- Use our jade helpers for forms
	include ../node_modules/jade-helpers/mixins/form-mixins
	head
		title= title
		
		include stylesheets
		include scripts

	body.inner
		header
			section#logo
				a(href='/')
					img(src="/images/logo_dark.png")
			nav.menu.clearfix
				//- TODO: Move to own file / make dynamic based on login
				block nav
					include navigation

		#wrap
			section.banner
				block banner
			section.content
				block content

		footer
			div.content
				| Â© 2014 NodeMVC. All rights reserved.

		script(src='/external/bootstrap/js/bootstrap.min.js')

		//-	Show queued messages
		if(qmessages)
			each messageList, type in qmessages
				each message in messageList
					script.
						alertify.#{type}("!{message}"#{type=='error'? ', 0': ''});