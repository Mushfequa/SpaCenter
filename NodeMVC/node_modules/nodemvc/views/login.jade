extends layout
block content

	div.col-xs-6.center
		div.panel.panel-default
			div.panel-heading
				h3.panel-title Login
			div.panel-body
				form(action="/login", method="post").form-horizontal
					input(type="hidden", name="from", value=from)

					+formRow({name: "loginUsername", meta: { required: true, label: "Username" }}, { labelClass: 'col-sm-4', fieldClass: 'col-sm-7' })
						+textBox({name: "loginUsername"})
					+formRow({name: "loginPassword", meta: { required: true, label: "Password" }}, { labelClass: 'col-sm-4', fieldClass: 'col-sm-7' })
						+textBox({ type: "password", name: "loginPassword"})

					label.col-sm-4.control-label
					div.col-sm-8
						button(type="submit").btn.btn-primary Login
						p.indentLabelWidth small Hint - bob:password

	script.
		$('#loginUsername').focus();